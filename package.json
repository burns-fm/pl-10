{
  "name": "@burns-fm/pl-10",
  "version": "0.5.0-beta.0",
  "description": "Self-hosted audio streaming",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:server": "tsc",
    "watch:server": "tsc --w",
    "build:client": "node scripts/build && npm run build:client:styles",
    "build:client:styles": "sass ./public/app/styles/scss/main.scss ./public/app/styles/main.css",
    "watch:client": "node scripts/watch",
    "watch:client:styles": "sass -w ./public/app/styles/scss/main.scss ./public/app/styles/main.css",
    "build": "npm run build:server && npm run build:client",
    "start": "node scripts/start",
    "start:dev": "echo 'Not yet configured'",
    "start:debug": "DEBUG=true npm start"
  },
  "author": {
    "name": "Rob Fairley",
    "email": "rob@burns.fm"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-typescript-compile": "^0.6.0-rc.1",
    "file-type": "^18.0.0",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "music-metadata": "^8.1.0",
    "node-sass-middleware": "^1.0.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.10",
    "@types/express": "^4.17.14",
    "@types/mime-types": "^2.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.3",
    "@types/node-sass-middleware": "^0.0.32",
    "chokidar": "^3.5.3",
    "sass": "^1.57.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "17.5.0"
  },
  "repository": {
    "url": "https://github.com/burns-fm/pl-10"
  },
  "homepage": "https://burns.fm"
}
